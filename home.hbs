<!DOCTYPE html>
<html lang="{{@site.locale}}">
  <head>
    <title>{{ meta_title }}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="{{asset 'css/tailwind.built.css'}}" rel="stylesheet">
    {{ghost_head}}
  </head>
  <body class="{{body_class}} home-body">
    {{{body}}}

    <div>
      <canvas id="canvas" class="matrix-canvas"></canvas>
      <div class="terminal">
          <div class="terminal-content">

            <span class="terminal-prompt-name">
              {{#if @custom.terminal_prompt_name}}
                {{@custom.terminal_prompt_name}}:
              {{/if}}
            </span>

            <span class="terminal-prompt-path">/home</span>
            <span> $&ensp;ls<br></span>
            <div class="terminal-result">
              {{ navigation }}
            </div>
          </div>
      <div>
    </div>
    
    {{!-- Dynamic footer content from code injection etc --}}
    {{ghost_foot}}
  </body>
  <script src="{{asset 'js/matrix.js'}}"></script>
</html>
